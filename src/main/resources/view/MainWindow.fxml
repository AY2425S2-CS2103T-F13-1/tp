<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<fx:root type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
         title="NeuroSync" minWidth="450" minHeight="600" onCloseRequest="#handleExit">
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@styles.css" />
      </stylesheets>

      <VBox styleClass="main-window">
        <MenuBar fx:id="menuBar" VBox.vgrow="NEVER" styleClass="menu-bar">
          <Menu text="File">
            <MenuItem onAction="#handleExit" text="Exit" />
          </Menu>
          <Menu text="Help">
            <MenuItem fx:id="helpMenuItem" onAction="#handleHelp" text="Help" />
          </Menu>
        </MenuBar>

        <StackPane fx:id="commandBoxPlaceholder" VBox.vgrow="NEVER" styleClass="command-box-container">
          <padding>
            <Insets top="5" right="10" bottom="5" left="10" />
          </padding>
        </StackPane>

        <StackPane fx:id="resultDisplayPlaceholder" VBox.vgrow="NEVER" styleClass="result-display"
                   minHeight="100" prefHeight="100" maxHeight="100">
          <padding>
            <Insets top="5" right="10" bottom="5" left="10" />
          </padding>
        </StackPane>

        <VBox fx:id="patientList" styleClass="list-container" VBox.vgrow="ALWAYS">
          <StackPane fx:id="patientListPanelPlaceholder" VBox.vgrow="ALWAYS"/>
        </VBox>

        <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER" />
      </VBox>
    </Scene>
  </scene>
</fx:root>
